# Copy this file to .env and fill in your values
# Docker Compose will automatically load these environment variables

# GitHub Configuration
GITHUB_ORGANIZATION=your-github-org
GITHUB_APP_ID=123456
GITHUB_PRIVATE_KEY=/app/private-key.pem
GITHUB_INSTALL_ID=12345678

# Harness Configuration
HARNESS_API_KEY=your-harness-api-key
HARNESS_ACCOUNT_ID=your-account-id
HARNESS_ORG_ID=your-org-id
HARNESS_PROJECT_ID=your-project-id
HARNESS_BASE_URL=https://app.harness.io

# Default Values
DEFAULT_OWNER=platform-team
DEFAULT_TYPE=service
DEFAULT_LIFECYCLE=production

# Runtime Configuration
MODE=yaml
CONCURRENCY=5
DRY_RUN=false
LOG_LEVEL=info